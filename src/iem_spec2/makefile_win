
all: ..\..\lib\iem_spec2.dll

VIS_CPP_PATH = "C:\Programme\Microsoft Visual Studio\Vc98"

PD_INST_PATH = "C:\Programme\pd-0.37-3"

PD_WIN_INCLUDE_PATH = /I. /I$(PD_INST_PATH)\src /I$(VIS_CPP_PATH)\include

PD_WIN_C_FLAGS = /nologo /W3 /WX /DMSW /DNT /DPD /DWIN32 /DWINDOWS /Ox -DPA_LITTLE_ENDIAN

PD_WIN_L_FLAGS = /nologo

PD_WIN_LIB = /NODEFAULTLIB:libc /NODEFAULTLIB:oldnames /NODEFAULTLIB:kernel /NODEFAULTLIB:uuid \
	$(VIS_CPP_PATH)\lib\libc.lib \
	$(VIS_CPP_PATH)\lib\oldnames.lib \
	$(VIS_CPP_PATH)\lib\kernel32.lib \
	$(VIS_CPP_PATH)\lib\wsock32.lib \
	$(VIS_CPP_PATH)\lib\winmm.lib \
	$(PD_INST_PATH)\bin\pthreadVC.lib \
	$(PD_INST_PATH)\bin\pd.lib


SRC =	sigspec2_block_delay.c \
		sigspec2_math.c \
		sigspec2_tabreceive.c \
		sigspec2_tabreceive_enable.c \
		sigspec2_tab_conv.c \
		sigspec2_clip_max.c \
		sigspec2_clip_min.c \
		sigspec2_1p1z_time.c \
		sigspec2_1p1z_freq.c \
		sigspec2_log.c \
		sigspec2_stretch.c \
		sigspec2_shift.c \
		sigspec2_matrix_bundle_stat.c \
		iem_spec2.c


OBJ = $(SRC:.c=.obj)

.c.obj:
	cl $(PD_WIN_C_FLAGS) $(PD_WIN_INCLUDE_PATH) /c $*.c

..\..\lib\iem_spec2.dll: $(OBJ)
	link $(PD_WIN_L_FLAGS) /dll /export:iem_spec2_setup \
	/out:..\..\lib\iem_spec2.dll $(OBJ) $(PD_WIN_LIB)

clean:
	del *.obj
